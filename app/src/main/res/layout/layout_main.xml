<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/no_network_worning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_radius_nonetwork_worning"
        android:gravity="center_horizontal"
        android:text="您的网络状况不佳，请检查网络！"
        android:textColor="#1C1C1C"
        android:textSize="20dp"
        android:visibility="gone"/>


    <CheckBox
        android:id="@+id/checkBox_send"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="send"
        android:textColor="#008000" />

    <Button
        android:id="@+id/btnplayrecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:alpha="0.5"
        android:text="play"
        android:textColor="#008000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnstoprecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:alpha="0.5"
        android:text="stop"
        android:textColor="#008000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:alpha="0.5"
        android:text="set"
        android:textColor="#008000"
        android:textSize="20dp" />


    <ImageView
        android:visibility="gone"
        android:id="@+id/flag_small"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/flag_smile" />


    <TextView

        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="NULL"
       />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="NULL"
       />


    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Copyright © 2018.04 NUAA_Geature"
        android:textColor="#9370DB" />

</LinearLayout>